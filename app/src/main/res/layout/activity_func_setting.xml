<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:papersleep="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#323232"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.papersleep.machinelearningtutorial.not_activity.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:background="#323232"
        android:layout_weight="4"
        android:layout_below="@+id/cover_tutorial"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:id="@+id/select1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="精英选择"
                android:fontFamily="serif-monospace"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"/>

            <RadioButton
                android:button="@null"
                android:id="@+id/select2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="轮盘赌选择"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:background="@drawable/radiobutton_background"
                android:textSize="24sp"
                android:textStyle="bold" />
            <RadioButton
                android:button="@null"
                android:id="@+id/select3"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_background"
                android:layout_height="0dp"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="顺序选择"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold" />
            <RadioButton
                android:button="@null"
                android:background="@drawable/radiobutton_background"
                android:id="@+id/select4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="serif-monospace"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:gravity="center"
                android:text="退化选择"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:id="@+id/cross1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="单点交叉"
                android:fontFamily="serif-monospace"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"/>

            <RadioButton
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:id="@+id/cross2"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="多点交叉"
                android:fontFamily="serif-monospace"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"/>

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.example.papersleep.machinelearningtutorial.not_activity.MyButton
            android:id="@+id/select_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@layout/button_shape"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:padding="10dp"
            android:text="选择交叉策略"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            papersleep:backColor="#304090"
            papersleep:backColorPress="#6090d0" />

        <com.example.papersleep.machinelearningtutorial.not_activity.MyButton
            android:id="@+id/to_other"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@layout/button_shape"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/to_evo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            papersleep:backColor="#304090"
            papersleep:backColorPress="#6090d0" />
    </LinearLayout>

</LinearLayout>