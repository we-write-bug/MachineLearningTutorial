<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:papersleep="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".practice.EnvSetting"
    android:background="@drawable/lights"
    android:backgroundTint="#1b1b1b"
    android:padding="0dp">

    <com.example.papersleep.machinelearningtutorial.not_activity.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/r1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/ca"
            />

            <ImageButton
                android:id="@+id/r2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/im"
            />

            <ImageButton
                android:id="@+id/r3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/fury"
            />
            <ImageButton
                android:id="@+id/r4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/hulk"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/big_r"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/ca"/>

            <TextView
                android:id="@+id/intro_r"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/r5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/thor"
            />

            <ImageButton
                android:id="@+id/r6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/groot"
            />

            <ImageButton
                android:id="@+id/r7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/spider"
            />

            <ImageButton
                android:id="@+id/r8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/panther"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/env_roll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:max="20"
                android:thumbTint="#2090F0"
                android:maxHeight="4dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/seek_bar_line"
                android:progressTint="#7773ab"
            />

            <!--android:thumb="@drawable/seek_bar_button"-->

            <TextView
                android:id="@+id/num_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="@string/num_default"
                android:textSize="24sp"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.example.papersleep.machinelearningtutorial.not_activity.MyButton
            android:id="@+id/to_func"
            android:text="@string/to_func"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="Microsoft YaHei"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:padding="5dp"
            papersleep:backColor="#304090"
            papersleep:backColorPress="#6090d0"
            papersleep:fillet="true"
            papersleep:radius="30"
            papersleep:textColor="@android:color/white"
        />

    </LinearLayout>

</LinearLayout>