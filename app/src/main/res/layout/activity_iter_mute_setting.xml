<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:papersleep="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".practice.EndingAndSearching"
    android:background="@drawable/lights"
    android:backgroundTint="#1b1b1b"
    android:padding="0dp">

    <com.example.papersleep.machinelearningtutorial.not_activity.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iter_title"


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="进化代数"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/iter_seek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:max="949"
                android:thumbTint="#2090F0"
                android:maxHeight="4dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/seek_bar_line"
                android:progressTint="#7773ab"
            />

            <TextView
                android:id="@+id/iter_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="@string/num_default"
                android:textSize="24sp"
            />

        </LinearLayout>


        <TextView
            android:id="@+id/mutate_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="突变概率"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/mutate_seek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:max="20"
                android:thumbTint="#2090F0"
                android:maxHeight="4dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/seek_bar_line"
                android:progressTint="#7773ab"
            />

            <TextView
                android:id="@+id/mutate_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="@string/num_default"
                android:textSize="24sp"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <com.example.papersleep.machinelearningtutorial.not_activity.MyButton
            android:id="@+id/to_evo"
            android:text="@string/to_evo"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="Microsoft YaHei"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:padding="5dp"
            papersleep:backColor="#304090"
            papersleep:backColorPress="#6090d0"
            papersleep:fillet="true"
            papersleep:radius="30"
            papersleep:textColor="@android:color/white"
        />

    </LinearLayout>

</LinearLayout>